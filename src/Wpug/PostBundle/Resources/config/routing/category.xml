<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="category" pattern="/">
        <default key="_controller">WpugPostBundle:Category:index</default>
    </route>

    <route id="category_show" pattern="/{id}/show">
        <default key="_controller">WpugPostBundle:Category:show</default>
    </route>

    <route id="category_new" pattern="/new">
        <default key="_controller">WpugPostBundle:Category:new</default>
    </route>

    <route id="category_create" pattern="/create">
        <default key="_controller">WpugPostBundle:Category:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="category_edit" pattern="/{id}/edit">
        <default key="_controller">WpugPostBundle:Category:edit</default>
    </route>

    <route id="category_update" pattern="/{id}/update">
        <default key="_controller">WpugPostBundle:Category:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="category_delete" pattern="/{id}/delete">
        <default key="_controller">WpugPostBundle:Category:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
